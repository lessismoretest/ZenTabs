{
  "manifest_version": 3,
  "name": "MinimalTabs",
  "version": "1.0",
  "description": "极简主义标签页管理器",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "tabGroups",
    "clipboardWrite",
    "sidePanel",
    "sessions"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "popup.html#sidepanel"
  },
  "background": {
    "service_worker": "background.js"
  }
} 